{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "newLine": "LF",
    "types": ["node", "webrtc"],
    "typeRoots" : [
      "./node_modules/@types",
      "./lib/types"
    ],
    "lib": ["dom", "esnext"],
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "."
  },
  "exclude": ["node_modules"]
}
